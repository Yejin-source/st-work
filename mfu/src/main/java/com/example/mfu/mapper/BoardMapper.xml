<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mfu.mapper.BoardMapper"> <!-- 상황에 맞게 수정 필요 -->
	<insert id="insertBoard" parameterType="com.example.mfu.dto.Board">
		<selectKey resultType="Integer" keyProperty="boardNo" order="AFTER"> <!-- parameterType.setXXX(key) -->
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO board (
			board_title
		) VALUES (
			#{boardTitle} <!-- board.getTitle() -->
		)
	</insert>
	
	<select id="selectBoard" resultType="com.example.mfu.dto.Board">
		SELECT board_no, board_title FROM board
		ORDER BY DESC
		LIMIT #{limit} OFFSET #{offset}
	</select>
	
	<select id="countBoard" resultType="Integer">
		SELECT COUNT(*) FROM board
	</select>
</mapper>