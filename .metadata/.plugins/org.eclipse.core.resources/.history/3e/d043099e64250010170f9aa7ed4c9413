		arr.push('주황');
		arr.push('노랑');
		
		console.log(arr[2]); // 노랑
		console.log(arr[3]); // undefiend
		
		arr.push('초록');
		arr.push('파랑');
		arr.push('보라');
		console.log(arr);
		
		let arr2 = arr.splice(3, 2);
		console.log(arr);
		console.log(arr2);
		
		console.log(arr.indexOf('파랑'));
		
		let str = "동해물과 백두산이 마르고 닳도록";
