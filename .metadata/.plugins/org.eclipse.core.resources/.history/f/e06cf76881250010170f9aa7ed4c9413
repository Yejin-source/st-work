<title>Insert title here</title>
</head>
<body>
	<script>
		let isLeapYear = function(year) {
			// year가 입력되지 않으면 undefined
			return (year % 4 == 0) && (year % 100 != 0) || (year % 4 == 0);
		}; // 입력값은 숫자 하나이고, 매개값은 bool
		
		console.log('2020년', isLeapYear(2020));
		console.log('2010년', isLeapYear(2010));
		console.log('년', isLeapYear());
	</script>
</body>
</html>