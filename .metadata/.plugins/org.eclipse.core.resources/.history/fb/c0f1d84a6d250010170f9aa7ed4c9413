		// API
		let am = function() {
			alert('아침먹자');
		};
		
		let pm = function() {
			alert('점심먹자');
		};
		
		// 구조적 프로그래밍
		const today = new Date();
		const hour = today.getHours();
		
		if(hour < 12) {
			am();
		} else {
			pm();
		}
		
