<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<input type="number" id="a3">
	<select id="ope">
		<option value="+">+</option>
		<option value="-">-</option>
		<option value="*">*</option>
		<option value="/">/</option>
	</select>
	<input type="number" id="b3">
	<button type="button" onclick="cal()">=</button>
	<input type="number" id="result">
	
	<script>
		function cal() {
			const a3 = Number(document.getElementById('a3').value);
			const b3 = Number(document.getElementById('a3').value);
			const ope = document.getElementById('ope').value;
			let result = 0;
			
			// switchë¬¸
			switch(ope) {
			case '+':
				result = a3 + b3;
				break;
			case '-':
				result = a3 - b3;
				break;
			case '*':
				result = a3 * b3;
				break;
			case '/':
				result = a3 / b3;
				break;
			}
			document.getElementById('result').value = result;
		}
	</script>
</body>
