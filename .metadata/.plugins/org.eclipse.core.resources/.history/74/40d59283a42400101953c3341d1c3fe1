package gdtest;

public class Q23 {
	
	 public static void main(String[] args) {
		 Q23 t = new Q23();
		  int a = 20;
		  int b[] = { 100, 200, 300 };
		  t.change(a, b);
		  t.display(a, b);
	}

	 void change(int a, int b[]) { // b[] 참조타입이라 주소가 넘어옴
		  a += 10;
		  b[1] += 10;
		  // 메서드가 끝나면 해당 내용이 다 지워짐
	 }

	 void display(int a, int b[]) {
		  System.out.println(a); // 20
		  System.out.println(b[1]); // 210
	 }
}
