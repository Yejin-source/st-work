package gdtest;

public class Q10 {
	public static void main(String[] args) {
		
		int[] arr = {1, 2, 3, 4, 5};
		int result = 0;
		
		for (int i = 1; i < arr.length; i++) {
		   if (i % 2 == 0) {
			   result += arr[i];
		   } else {
			   result -= arr[i];
		   }
		} 
		// 1 - 2 + 3 - 4 + 5
		
		System.out.println(result); // 2
	}

}
