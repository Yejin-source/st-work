package gdtest;

public class Q22 {
	
	 public static void main(String[] args) {
		 
		  int arr[][] = { {10, 20, 30}, {40} }; // 다차원배열의 상수(리터럴) 초기화
		  
		  // 실행결과?
		  System.out.println(arr[0].length); // 3
		  System.out.println(arr[1].length); // 1

		  System.out.println(arr[0][0]); // 10
		  System.out.println(arr[0][1]); // 20
		  System.out.println(arr[1][0]); // 40
		  
		  
		  // 추가 내용 
		  System.out.println(arr[1][1]); // 예외 발생 
		  
		  // try-catch로 만들기
		  try {
			  System.out.println(arr[0].length); // 3
			  System.out.println(arr[1].length); // 1

			  System.out.println(arr[0][0]); // 10
			  System.out.println(arr[0][1]); // 20
			  System.out.println(arr[1][0]); // 40
		  } catch(Exception e) {
			  System.out.println("배열의 범위가 아닙니다");
		  }
	}
}
