<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<script>
		function hello() { // {}안의 모든 코드(명령)들을 hello 이름을 부르겠다는 것 -> 코드의 집합
			alert('hello');
		}
		
		hello(); // 함수 호출
		
		let bye = function () { // 익명함수를 bye변수에 저장 -> bye는 변수이자 함수
			alert('bye');
		};
		
		bye();
		
		let hello2 = hello;
		let bye2 = bye;
		
		hello2();
		bye2();
		
		// 익명함수 즉시 호출
		(function () {alert('헤헤');})();
		
		// 즉시 호출이 아닌 경우 익명함수는 변수에 대입해서 사용하면 됨
		let f = function () {alert('헤헤');};
		
		// 선언적합수
		function f2 () {
			alert('우우');
		};
	</script>
</body>
</html>