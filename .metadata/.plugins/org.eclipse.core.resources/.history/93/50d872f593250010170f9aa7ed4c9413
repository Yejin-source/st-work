<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<button type="button" onclick="lotto()">로또번호생성</button>
	<hr>
	<textarea rows="1" cols="50" id="lottoNumber"></textarea>
	<script>
		let lotto = function() { // let: 변수 선언 | function: 함수 선언
			let balls = new Array(45);
			for(let i=0; i < balls.length; i++) {
				balls[i] = i+1; // 1 ~ 45
			}
			console.log(balls); // 초기화 1 ~ 45
			
			// shuffle
			// TODO balls shuffle... Math.random()...
			
			// balls.length - 1: 배열의 마지막 인덱스
			for(let i = balls.length - 1; i > 0; i--) { // 배열 끝에서부터 앞으로 가면서 반복 (뒤에서부터 확정된 숫자 쌓기)
				let j = Math.floor(Math.random() * (i + 1));
				
				let temp = balls[i];
				balls[i] = balls[j];
				balls[j] = temp;
			}
			
			console.log(balls); // 섞기 후 ? ~ ?
				
					
			let result = balls.slice(0, 6); // index 0값 ~ index 5값
			let output = '';
			for(let i=0; i<result.length; i++) {
				output = output + result[i] + ' ';
			}
				
			document.querySelector('#lottoNumber').value = output;
		}
	</script>
</body>
</html>