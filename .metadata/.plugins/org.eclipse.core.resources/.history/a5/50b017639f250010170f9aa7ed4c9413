<title>Insert title here</title>
<style>
  body {
    background-color: #c8e6c9; /* 연한 초록 배경 */
    font-family: 'Courier New', monospace; /* 계산기 느낌 폰트 */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  table {
    border-collapse: collapse;
    background-color: #333; /* 어두운 테두리 */
    border: 4px solid #222;
    border-radius: 8px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  input[type="text"] {
    width: 100%;
    padding: 20px;
    font-size: 32px;
    background-color: #111;
    color: #0f0; /* 연녹색 텍스트 */
    border: none;
    text-align: right;
    letter-spacing: 2px;
    outline: none;
  }

  td {
    padding: 0;
  }

  button {
    width: 100%;
    height: 60px;
    font-size: 22px;
    background-color: #666;
    color: white;
    border: 1px solid #444;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  button:hover {
    background-color: #888;
  }

  #equal {
    background-color: #43a047;
    font-weight: bold;
  }

  #equal:hover {
    background-color: #2e7d32;
  }

  #back {
    background-color: #b0bec5;
    color: black;
  }

  #back:hover {
    background-color: #90a4ae;
  }
